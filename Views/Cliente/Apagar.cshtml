@model ClienteModel
@{
    ViewData["Title"] = "Apagar Clientes";
}

<div class="text-center">
    <h3>Realmente deseja apagar o cliente:(@Model.Nome) ?</h3>
</div>

<a class="btn btn-primary " role="button" asp-controller="Cliente" asp-action="Index">Cancelar</a>
<a class="btn btn-danger " role="button" asp-controller="Cliente" asp-route-id="@Model.IdCliente" asp-action="ApagarConf">Confirmar</a>

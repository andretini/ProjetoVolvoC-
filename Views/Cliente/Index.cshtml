@model List<ClienteModel>
@{
    ViewData["Title"] = "Listagem de Clientes";
}

<div class="text-center">

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    <h1 class="display-4"> Cadastro de Clientes</h1>

    <div class="d-grid gap-4 justify-content-start">
        <a class="btn btn-primary" asp-controller="Cliente" asp-action="Criar" role="button">Criar Novo Cliente</a>
    </div>
    <br>
  

    <table class="table" id="tabela-cliente">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Sobrenome</th>
                <th scope="col">RG</th>
                <th scope="col">CPF</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>          
          @if(Model != null && Model.Any())
            {
                foreach(ClienteModel cliente in Model)
                {
                    <tr>
                        <td>@cliente.IdCliente</td>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Sobrenome</td>
                        <td>@cliente.Rg</td>
                        <td>@cliente.Cpf</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@cliente.IdCliente" asp-controller="Cliente" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@cliente.IdCliente" asp-controller="Cliente" asp-action="Apagar">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
           
        </tbody>
    </table>

    
    
</div>